{
  "name": "@novastar/serial",
  "version": "2.0.0-alpha.3",
  "description": "Serial binding for @novastar/codec",
  "license": "MIT",
  "author": "Andrei Sarakeev <sarakusha@gmail.com>",
  "main": "build/main/serial.js",
  "typings": "build/main/serial.d.ts",
  "module": "build/module/serial.js",
  "keywords": [
    "novastar",
    "DOOH",
    "NovaLCT",
    "Nova Mars SDK"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sarakusha/novastar.git",
    "directory": "packages/serial"
  },
  "dependencies": {
    "@novastar/codec": "2.0.0-alpha.3",
    "@serialport/bindings-cpp": "^10.7.0",
    "conf": "^10.1.1",
    "serialport": "^10.4.0",
    "tiny-typed-emitter": "^2.0.3"
  },
  "peerDependencies": {
    "debug": "^4.3.3"
  },
  "scripts": {
    "build": "run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix -c ../../.eslintrc-prod.js",
    "test": "run-s build test:*",
    "test:lint": "eslint src --ext .ts -c ../../.eslintrc-prod.js",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:spelling": "cspell \"{README.md,.github/*.md,src/**/*.ts}\"",
    "test:unit": "jest src",
    "yalc:publish": "yalc publish --push",
    "yalc:update": "yarn build && yalc publish --push"
  },
  "files": [
    "build/main",
    "build/module",
    "!**/*.spec.*",
    "!**/*.tsbuildinfo",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageReporters": [
      "lcov",
      "html"
    ]
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  }
}
