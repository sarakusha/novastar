{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@serialport/bindings"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.2",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "codecov": "^3.5.0",
    "cspell": "^6.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.0.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^4.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "gh-pages": "^3.1.0",
    "husky": "^7.0.2",
    "jest": "^27.0.4",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "open-cli": "^7.0.1",
    "prettier": "^2.1.1",
    "prettier-airbnb-config": "^1.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.2",
    "ts-node": "^10.0.0",
    "typedoc": "^0.22.5",
    "typedoc-plugin-rename-defaults": "^0.4.0",
    "typescript": "^4.0.2"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "test": "lerna run test --stream",
    "release:publish": "lerna publish from-package --dist-tag latest && git push --follow-tags origin main",
    "release:publish:dry-run": "lerna publish from-package --dist-tag next --registry=\"http://localhost:4873/\"",
    "release:version": "lerna version --conventional-commits --exact --no-push --no-git-tag-version",
    "prerelease:version": "lerna version --conventional-commits --conventional-prerelease --exact --no-push --no-git-tag-version",
    "codec": "yarn workspace @novastar/codec",
    "serial": "yarn workspace @novastar/serial",
    "net": "yarn workspace @novastar/net",
    "native": "yarn workspace @novastar/native",
    "screen": "yarn workspace @novastar/screen",
    "doc": "run-s doc:html && open-cli build/docs/index.html",
    "doc:open": "open-cli build/docs/index.html",
    "doc:html": "typedoc --name novastar.js --entryPointStrategy packages --entryPoints packages/codec packages/native packages/net packages/serial --categorizeByGroup true --excludeProtected --excludePrivate --out build/docs",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -t -d build/docs"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
